
<div>
  <%= form_for(@product_treatment) do |f| %>

    <label>Cost</label>
    <div>
      <%= f.text_field :cost, placeholder: "Cost", class:"#" %>
    </div>
    <label>weight</label>
    <div>
      <%= f.text_field :weight, placeholder: "weight", class:"#" %>
    </div>
    <label>waste</label>
    <div>
      <%= f.text_field :waste, placeholder: "waste", class:"#" %>
    </div>
    <label>Seleccione Producto</label>
    <div>
      <%= select_tag(:product_id, options_for_select(  @products.map { |product| [product.name , product.id ] } )  ) %>
    </div>
    <label>Seleccione Tratamiento</label>
    <div>
    <div>
      <%= select_tag(:treatment_id, options_for_select(  @treatments.map { |treatment| [treatment.name , treatment.id ] } )  ) %>
    </div>
    <div>
      <%= f.submit "Create Product Treatment" %>
    </div>
   
  <% end %> 
</div>


